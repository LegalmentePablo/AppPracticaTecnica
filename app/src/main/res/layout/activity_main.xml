<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/ll1"
        android:orientation="vertical">
        <EditText
            android:id="@+id/etCuenta"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Ingrese su cuenta"
            android:layout_marginBottom="15dp"
            />
        <EditText
            android:id="@+id/etContra"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/etCuenta"
            android:hint="Ingrese su contraseÃ±a"
            android:inputType="textPassword"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@id/etContra"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:text="Ingresar" />

        <Button
            android:id="@+id/btnRegistro"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@id/btnIngresar"
            android:layout_gravity="center_horizontal"
            android:text="Registrarse"/>
    </LinearLayout>
</RelativeLayout>